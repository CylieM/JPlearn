<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:right="4dp" android:bottom="50dp">
        <shape android:shape="rectangle">
            <corners android:radius="9dp" />
            <solid android:color="#44000000" /> <!-- Shadow color -->
        </shape>
    </item>
    <!-- Main button layer with thicker border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="9dp" />
            <solid android:color="#FFFFFF" /> <!-- White color -->
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Thicker border with light gray color -->
            <padding android:left="11dp" android:top="11dp" android:right="11dp" android:bottom="11dp" />
        </shape>
    </item>
</layer-list>
