<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/bg28">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_round_background"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_margin="16dp">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:id="@+id/detailImage"
            android:padding="8dp"
            android:layout_gravity="center"
            android:src="@drawable/uploadimg"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap your profile picture to update it."
            android:textSize="12sp"
            android:textColor="@color/myblue"
            android:layout_gravity="center"

            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/myblue"
            />

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username: "
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/myblue"
            android:layout_marginTop="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginTop="16dp"

            >

            <TextView
                android:id="@+id/DailyStreakTextView"
                android:layout_width="70dp"
                android:layout_marginRight="70dp"
                android:layout_height="wrap_content"
                android:text="Daily Streak: "

                android:textColor="@color/myblue"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/HiraganaProgressTextView"

                android:layout_height="wrap_content"
                android:text="Hiragana Progress: "
                android:layout_width="90dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/myblue"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prog_hiragana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"

                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/KatakanaProgressTextView"
                android:layout_height="wrap_content"
                android:text="Katakana Progress: "
                android:layout_width="90dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/myblue"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prog_katakana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"

                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/VocabProgressTextView"
                android:layout_width="100dp"
                android:layout_marginRight="10dp"                android:layout_height="wrap_content"
                android:text="Vocabulary Progress: "

                android:textColor="@color/myblue"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prog_vocab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"

                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/GrammarProgressTextView"
                android:layout_width="100dp"
                android:layout_marginRight="10dp"                android:layout_height="wrap_content"
                android:text="Grammar Progress: "
                android:textColor="@color/myblue"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prog_grammar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"

                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/KanaShootWaveTextView"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="53dp"
                android:gravity="right"
                android:text="Kanashoot Game Mode final wave: "
                android:textColor="@color/myblue"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginTop="10dp"


            >

            <TextView
                android:id="@+id/KanaShootHSTextView"
                android:layout_width="175dp"
                android:layout_marginRight="40dp"                android:layout_height="wrap_content"
                android:text="Kanashoot Game Mode highest score: "

                android:textColor="@color/myblue"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="left"
            android:layout_marginTop="10dp"

            >

            <TextView
                android:id="@+id/NihongoRaceTextView"
                android:layout_width="170dp"
                android:layout_marginRight="45dp"                android:layout_height="wrap_content"
                android:text="NihongoRace Game Mode best WPM: "

                android:textColor="@color/myblue"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="left"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/NihongoRaceWinsTextView"
                android:layout_width="200dp"
                android:layout_marginRight="15dp"                android:layout_height="wrap_content"
                android:text="NihongoRace Game Mode First Place wins: "

                android:textColor="@color/myblue"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
