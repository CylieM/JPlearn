<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg28">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg28"
        android:layout_above="@id/bottomNavView"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/custom_round_background"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/detailImage"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/uploadimg"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap your profile picture to update it."
                    android:textSize="12sp"
                    android:textColor="@color/myblue"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/myblue" />

                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username: "
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/myblue"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/DailyStreakTextView"
                        android:layout_width="158dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="70dp"
                        android:text="Daily Streak: "
                        android:textColor="@color/myblue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/HiraganaProgressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Hiragana Progress: "
                        android:textColor="@color/myblue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prog_hiragana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/KatakanaProgressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Katakana Progress: "
                        android:textColor="@color/myblue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prog_katakana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/VocabProgressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Vocabulary Progress: "
                        android:textColor="@color/myblue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prog_vocab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/GrammarProgressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Grammar Progress: "
                        android:textColor="@color/myblue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prog_grammar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/KanaShootWaveTextView"
                        android:layout_width="174dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="Kanashoot Game Mode final wave: "
                        android:textColor="@color/myblue"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/KanaShootHSTextView"
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="Kanashoot Game Mode highest score: "
                        android:textColor="@color/myblue"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/NihongoRaceTextView"
                        android:layout_width="190dp"
                        android:layout_marginRight="45dp"
                        android:layout_height="wrap_content"
                        android:text="NihongoRace Game Mode best WPM: "
                        android:textColor="@color/myblue"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="left"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/NihongoRaceWinsTextView"
                        android:layout_width="190dp"
                        android:layout_marginRight="50dp"
                        android:layout_height="wrap_content"
                        android:text="NihongoRace First Place Wins: "
                        android:textColor="@color/myblue"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/myblue"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>

