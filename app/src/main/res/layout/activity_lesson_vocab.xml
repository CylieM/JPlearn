<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LessonVocab"
    android:background="@drawable/bg31"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="229dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="15dp"
                    android:background="@drawable/boad">


                    <TextView
                        android:id="@+id/tvFront"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="50dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/red"
                        android:textSize="34sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRomaji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:text="Romaji"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="90dp"
                        android:text="Romaji"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#3f2526"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="120dp"
                        android:paddingRight="120dp">

                        <TextView
                            android:id="@+id/tvBtnName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="Name"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="|"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvBtnExample"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:text="Example"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>




                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="35dp">

                            <ImageButton
                                android:id="@+id/btnPrev"
                                android:rotationY="190"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/arrow"
                                />

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"

                                android:layout_weight="1"
                                android:textColor="@color/gray"

                                android:text="Name"
                                android:textSize="24sp"
                                />


                            <ImageButton
                                android:id="@+id/btnNext"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/arrow"
                                />


                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            app:srcCompat="@drawable/objex_unlimited_black_line1" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:paddingLeft="55dp"
                    android:paddingTop="50dp"
                    android:paddingRight="55dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/Tv_op_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Pronunciation : "
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/red"

                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Tv_desc_1"
                                android:layout_weight="20"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum"

                                android:textColor="@color/gray"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            >

                            <TextView
                                android:id="@+id/Tv_op_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:text="Description : "
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/red"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Tv_desc_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/gray"
                                android:text="TextView"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_lesson_audio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    app:srcCompat="@drawable/speaker_or_volume_icon_free_vector_removebg_preview" />




            </LinearLayout>





        </ScrollView>
        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="30dp"
            android:background="#e8d320"
            android:backgroundTint="#e8d320"
            app:srcCompat="@drawable/objex_unlimited_black_line1"
            tools:srcCompat="@drawable/objex_unlimited_black_line1___copy" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>