<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="813dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMessage"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="Welcome to Jlearn"
                android:textSize="40sp" />

            <!-- Button for Lessons -->

            <Button
                android:id="@+id/btnLessons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Lessons" />

            <!-- Button for Self-Testing -->
            <Button
                android:id="@+id/btnLessonReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Review" />

            <!-- TextViews below the buttons -->
            <Button
                android:id="@+id/btnSelfTesting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Test Yourself" />

            <TextView
                android:id="@+id/txtBelowButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Lessons - To start Learning"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtBelowButtons2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Review - To the Lessons"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtBelowButtons3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Test Yourself - To Test what you learned"
                android:textSize="16sp" />



            <!-- Horizontal LinearLayout with ImageView and TextView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconImageView1"
                    android:layout_width="71dp"
                    android:layout_height="69dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icon description"

                    app:srcCompat="@drawable/leaderboards" />

                <TextView
                    android:id="@+id/iconDescriptionTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="To view the Leaderborads"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconImageView2"
                    android:layout_width="71dp"
                    android:layout_height="69dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icon description"

                    app:srcCompat="@drawable/kanashooticon" />

                <TextView
                    android:id="@+id/iconDescriptionTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="To open Kanashoot"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconImageView3"
                    android:layout_width="71dp"
                    android:layout_height="69dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icon description"

                    app:srcCompat="@drawable/nihongoraceicon" />

                <TextView
                    android:id="@+id/iconDescriptionTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="To open Nihongo Race"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconImageView4"
                    android:layout_width="71dp"
                    android:layout_height="69dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icon description"

                    app:srcCompat="@drawable/profile" />

                <TextView
                    android:id="@+id/iconDescriptionTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="To view your profile"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

